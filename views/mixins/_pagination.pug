          | Prev
    else
      .pagination__prev--disable
        a(disabled) 
          <svg class="svg-inline--fa fa-arrow-left fa-w-14 mgr disable" aria-hidden="true" data-prefix="far" data-icon="arrow-left" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M229.9 473.899l19.799-19.799c4.686-4.686 4.686-12.284 0-16.971L94.569 282H436c6.627 0 12-5.373 12-12v-28c0-6.627-5.373-12-12-12H94.569l155.13-155.13c4.686-4.686 4.686-12.284 0-16.971L229.9 38.101c-4.686-4.686-12.284-4.686-16.971 0L3.515 247.515c-4.686 4.686-4.686 12.284 0 16.971L212.929 473.9c4.686 4.686 12.284 4.686 16.971-.001z"></path></svg>
          | Prev
    
    .pagination__text
      p Page #{page} of #{pages} - #{count} total results
    
    if page < pages
      .pagination__next
        a(href=`/home/page/${parseFloat(page) + 1}`) Next
